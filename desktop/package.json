{
  "name": "gxml-desktop",
  "version": "1.0.0",
  "description": "GXML Desktop - Native geometric XML layout editor",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "build": "npm run build:frontend && electron-builder",
    "build:mac": "npm run build:frontend && electron-builder --mac",
    "build:win": "npm run build:frontend && electron-builder --win",
    "build:frontend": "cd ../gxml-web/frontend && npm run build && cp -r dist ../../gxml-desktop/frontend-dist",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.gxml.desktop",
    "productName": "GXML",
    "directories": {
      "output": "dist",
      "buildResources": "resources"
    },
    "files": [
      "electron/**/*",
      "frontend-dist/**/*",
      "!node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "python-env",
        "to": "python-env",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "resources/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "tree-kill": "^1.2.2"
  }
}
